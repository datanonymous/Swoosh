<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LeagueActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/desiredleaguebg"
            android:id="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="centerCrop"/>
    <ImageView
            android:layout_width="152dp"
            android:layout_height="33dp" app:srcCompat="@drawable/swooshlogo"
            android:id="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="@+id/imageView3" android:scaleType="fitCenter"/>
    <Button
            android:text="NEXT"
            android:layout_width="0dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="501dp"
            android:id="@+id/button2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:background="@drawable/swoosh_button" android:fontFamily="@font/montserrat"
            android:textColor="@color/colorAccent" android:textSize="14sp"/>
    <Button
            android:text="MENS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textColor="@color/colorAccent"
            android:fontFamily="@font/montserrat" android:background="@drawable/swoosh_button"
            tools:layout_editor_absoluteY="145dp"/>
    <Button
            android:text="WOMENS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textColor="@color/colorAccent" android:fontFamily="@font/montserrat"
            android:background="@drawable/swoosh_button"/>
    <Button
            android:text="INFANT"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="@+id/imageView3"
            android:layout_marginEnd="8dp" android:textColor="@color/colorAccent"
            android:fontFamily="@font/montserrat" android:background="@drawable/swoosh_button"/>
    <TextView
            android:text="DESIRED LEAGUE:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="131dp" android:id="@+id/textView4" android:textColor="@color/colorAccent"
            android:fontFamily="@font/montserrat" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button3"/>
</android.support.constraint.ConstraintLayout>